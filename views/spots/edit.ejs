<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit the spot: <%= spot.name %></h1>
        <div style="width:30%; margin: 35px auto;">   
            <form action="/spots/<%= spot._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="spot[name]" value="<%= spot.name%>">   
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="spot[image]" value="<%= spot.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="spot[description]"><%= spot.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form> 
            <a href="/spots">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>